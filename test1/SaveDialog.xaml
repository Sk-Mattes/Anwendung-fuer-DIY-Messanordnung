<Window x:Class="test1.SaveDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save File" Height="160" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="#FF161616">
    <Grid Background="#FF161616">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="#FF1D1D1F" BorderThickness="1" CornerRadius="20" Background="#FF1D1D1F" Margin="10">
            <TextBox x:Name="FileNameTextBox" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Stretch" Background="#FF1D1D1F" Foreground="White" BorderBrush="White" BorderThickness="1" Padding="5" Height="30" />
        </Border>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <Button Content="Save" Width="75" Margin="5" Click="SaveButton_Click" Background="White" Foreground="Black" BorderBrush="White" BorderThickness="1"/>
            <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click" Background="White" Foreground="Black" BorderBrush="White" BorderThickness="1"/>
        </StackPanel>
    </Grid>
</Window>

